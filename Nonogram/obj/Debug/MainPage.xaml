<Page
    x:Class="Nonogram.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nonogram"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:ConnectionId='1' x:Name="btnExit" 
                Content="Exit" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Grid.Column="2" 
                Margin="10.333,0.333,0,0" 
                Grid.Row="5" 
                Height="62" 
                Width="113" 
                Foreground="#FF82E3EA" 
                                     />
        <TextBlock x:Name="textBlockGameName"
                   Margin="10,10,0,156.667" 
                   TextWrapping="Wrap" Text="Picross" 
                   Width="97"
                   TextAlignment="Center" HorizontalAlignment="Left" 
                   FontWeight="Bold" FontSize="20" Foreground="#FF82E3EA"
                   />
        <Button x:ConnectionId='2' x:Name="btnEasy" 
                Content="Łatwy (5x5)" 
                Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="125,0.333,0,0" 
                Height="63" Width="150" 
                Foreground="#FF82E3EA"                      />
        <Button x:ConnectionId='3' x:Name="btnNormal" 
                Content="Normalny (6x6)" 
                Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="125,0.167,0,0" 
                Height="63" Width="150" 
                Foreground="#FF82E3EA"                         />
        <Button x:ConnectionId='4' x:Name="btnHard" 
                Content="Trudny (7x7)" 
                Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="125,0,0,0" Height="63" Width="150" 
                Foreground="#FF82E3EA"                       />
        <Button x:ConnectionId='5' x:Name="btnOptions" 
                Content="Opcje" 
                HorizontalAlignment="Left" 
                Margin="10,0,0,1" 
                Grid.Row="5" 
                VerticalAlignment="Bottom" 
                Height="62" 
                Width="113" 
                Foreground="#FF82E3EA" 
                                        />
        <TextBlock x:Name="textBlock" 
                   Height="147" 
                   Margin="10,35,10,0" 
                   TextWrapping="Wrap" 
                   Text="DAMN!            IT'S PICROSS!" 
                   Width="380" 
                   Grid.Row="0" 
                   Grid.ColumnSpan="3" 
                   TextAlignment="Center" 
                   FontWeight="Bold" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Foreground="#FF82E3EA" 
                   FontSize="50"/>
        <MediaElement x:Name="musicMenu" Grid.Column="2" HorizontalAlignment="Left" Height="25" Margin="100.333,10,0,0" VerticalAlignment="Top" Width="23" IsLooping="True" Source="Assets/musicMenu.mp3" AutoPlay="False" />

    </Grid>
</Page>

