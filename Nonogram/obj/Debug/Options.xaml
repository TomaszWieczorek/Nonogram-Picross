<Page
    x:Class="Nonogram.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nonogram"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="textBlockGameName"
                   Margin="10,10,0,156.667" 
                   TextWrapping="Wrap" Text="Picross" 
                   Width="97"
                   TextAlignment="Center" HorizontalAlignment="Left" 
                   FontWeight="Bold" FontSize="20" Foreground="#FF82E3EA"
                   />

        <Button x:ConnectionId='1' x:Name="btnCredits" 
                Content="Informacje" 
                HorizontalAlignment="Left" 
                Margin="10,0.333,0,0" 
                Grid.Row="5" 
                VerticalAlignment="Top" 
                Height="62" 
                Width="113" 
                Foreground="#FF82E3EA" 
                                        />

        <TextBlock x:Name="textBlockSound" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="15,10.333,10.333,0" Grid.Row="1"
                   TextWrapping="Wrap" 
                   Text="Dźwięk:" FontSize="25" FontWeight="Bold"
                   Foreground="#FF82E3EA" 
                   Height="31" Width="108"/>

        <TextBlock x:Name="textBlockSoundGlosnosc" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="15,10,5.333,11" Grid.Row="2"
                   TextWrapping="Wrap" 
                   Text="Głośność:" FontSize="25" FontWeight="Bold"
                   Foreground="#FF82E3EA" 
                   Height="31" Width="113"/>

        <Button x:ConnectionId='2' x:Name="btnPomoc" Content="Instrukcja" Grid.Column="1" HorizontalAlignment="Left" Margin="9.667,6.333,0,0" Grid.Row="3" VerticalAlignment="Top" Foreground="#FF82E3EA"                        />


        <TextBlock x:Name="textBlockCredits"  
                   Margin="10,106.667,10,9.5" 
                   TextWrapping="Wrap" 
                   Text="Opcje" 
                   Width="380" 
                   Grid.Row="0" 
                   Grid.ColumnSpan="3"
                   TextAlignment="Center" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="#FF82E3EA" 
                   FontSize="50"
                   />

        <Button x:ConnectionId='3' x:Name="btnMenu" 
                Content="Menu" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Grid.Column="2" 
                Margin="10.333,0.833,0,0" 
                Grid.Row="6" 
                Height="45"
                Width="113"
                Foreground="#FF82E3EA"  
                                      
                />
        
        <Button x:ConnectionId='4' x:Name="btnWlaczDzwiek" Content="Włącz" Grid.Column="1" HorizontalAlignment="Left" Margin="9.667,6.333,0,0" Grid.Row="1" VerticalAlignment="Top"                              />
        
        <Button x:ConnectionId='5' x:Name="btnWylaczDzwiek" Content="Wyłącz" Grid.Column="2" HorizontalAlignment="Left" Margin="9.667,6.333,0,0" Grid.Row="1" VerticalAlignment="Top"                              />
        
        <Slider x:ConnectionId='6' x:Name="sliderGlosnosc" Grid.Column="1" HorizontalAlignment="Left" Margin="9.667,9.167,0,0" Grid.Row="2" VerticalAlignment="Top" Width="164" Grid.ColumnSpan="2" Background="#FF82E3EA" Height="45"                                            />
        
        <TextBlock x:Name="textBlockGlosnosc" Grid.Column="2" HorizontalAlignment="Left" Margin="59.333,13,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" Foreground="#FF82E3EA" FontSize="30" VerticalAlignment="Top" FontWeight="Bold"/>

        <MediaElement x:Name="musicMenu" Grid.Column="2" HorizontalAlignment="Left" Height="25" Margin="100.333,10,0,0" VerticalAlignment="Top" Width="23" AudioCategory="BackgroundCapableMedia" IsLooping="True" Source="Assets/musicMenu.mp3" />
    </Grid>
</Page>

